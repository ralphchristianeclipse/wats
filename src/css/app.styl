// app global css
@import './themes/variables.ios'

.q-layout-page-container
  background: #f1f3f4

.q-layout-drawer-left
  width: 180px
  color: #FFFFFF
  font-weight: 500

.q-icon
  color: #FFFFFF
  font-size: 16px

.q-item-side, .q-item-side-left
  min-width: 25px

.q-collapsible-sub-item.indent
  padding-left: 0

.q-list-highlight > .q-item:hover, .q-item-highlight:hover, .q-list-link > .q-item:hover, .q-item-link:hover
  background: transparent
  color: #1b867b

.layout-padding
  margin: auto
  padding: 2em
  background: #f1f3f4

.q-item-label
  font-size: 13px

.q-item-label:first-letter
  text-transform: uppercase !important

.custom-tab .q-tabs-head
  padding-right: 0
  padding-left: 0
  border-top-left-radius: 5px
  border-top-right-radius: 5px
  background-color: #63bbb2 !important

.custom-tab .active
  background-color: #209e91

.custom-tab .q-tabs-bar
  border: 0

.custom-tab .q-tab-pane
  position: relative
  margin-bottom: 24px
  border: none
  border-radius: 5px
  background-color: #fff
  box-shadow: 0 5px 5px 0 rgba(0, 0, 0, 0.25)

.custom-list.q-list
  margin-bottom: 24px
  padding: 0
  border: 0
  border-radius: 5px
  background: #fff
  box-shadow: 0 5px 5px 0 rgba(0, 0, 0, 0.25)

.custom-list .q-list-header
  border-bottom: 1px solid rgba(0, 0, 0, 0.12)
  border-top-left-radius: 3px
  border-top-right-radius: 3px
  box-shadow: 0 0px 5px 0 rgba(0, 0, 0, 0.25)
  font-size: 16px

.primary
  background: #38A99D
  color: #FCFEFE

.success
  background: #9BC22F
  color: #FCFEFE

.info
  background: #40B6D5
  color: #FCFEFE

.warning
  background: #E4BF42
  color: #FCFEFE

.danger
  background: #F0696D
  color: #FCFEFE

.default
  background: #F4F3F4
  color: #7d7d7d

.btn-transparent
  border: 1px solid #d6d6d6
  background: 0 0
  color: #fff

.pull-right
  float: right

.pull-left
  float: left

.custom-btn
  padding: 5px 1.5em

.custom-btn .row
  display: block
  flex-wrap: nowrap

.q-btn
  text-transform: unset

.custom-chip
  position: absolute
  top: 3px
  right: -3px
  display: inline-block
  padding: 2px 4px
  min-width: 10px
  border-radius: 50%
  color: #fff
  vertical-align: baseline
  text-align: center
  text-shadow: none
  white-space: nowrap
  font-size: 11px
  line-height: 11px

.for-calendar .q-item
  padding: 0

.q-item-sublabel
  margin-top: 0.2rem
  color: #757575
  font-size: 70%

.attendance
  margin: 15px 0

.q-tabs
  margin-bottom: 24px

.btn-animate:hover
  transform: scale(1.2)

.custom-form
  overflow: visible !important

.invert-bg
  background: #f2f4f5

.custom-bcrum
  padding: 4px 12px

.q-layout-drawer-left
  transition: width 0.3s ease-in-out

.q-drawer-mini
  width: 50px