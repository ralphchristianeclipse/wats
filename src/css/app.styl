// app global css
@import './themes/variables.mat'

.q-layout-drawer-left
  width: 180px
  color: #FFFFFF
  font-weight: 500
  font-size: 13px !important

.q-icon
  color: #FFFFFF
  font-size: 16px

.q-item-side, .q-item-side-left
  min-width: 25px

.q-collapsible-sub-item.indent
  padding-left: 0

.sub-item
  padding-left: 35px

.q-list-highlight > .q-item:hover, .q-item-highlight:hover, .q-list-link > .q-item:hover, .q-item-link:hover
  background: transparent
  color: #1b867b

.layout-padding
  margin: auto
  padding: 2em
  background: #f1f3f4

.q-item-label
  font-size: 13px

.q-drawer-mini
  width: 50px

.q-layout-drawer-left
  transition: width 0.3s ease-in-out